{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Clean", 
        },
        {
            "label": "Clean",
            "type": "shell",    
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}",
                "clean"
            ],
        }
    ]
}